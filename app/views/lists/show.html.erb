<% @bookmarks.each do |bookmark| %>
<div class="jumbotron jumbotron-fluid" style="background-image: url(https://source.unsplash.com/random)">
  <div class="container">
    <h1 class="display-4"><%= bookmark.movie.title %></h1>
    <p class="lead"><%= bookmark.comment %></p>
    <p><%= link_to "Delete this bookmark", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></p>
  </div>
</div>
<% end %>
